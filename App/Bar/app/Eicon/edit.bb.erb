<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @eicon.object %>
    <h1>Edit <%= @eicon.icon_file%></h1>
    <%= link_to "Delete", :action => :delete, :id => @eicon.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @eicon.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Icon file: </td>
              <td class="itemValue"><input type="text" name="eicon[icon_file]" value="<%= @eicon.icon_file %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Icon: </td>
              <td class="itemValue"><input type="text" name="eicon[icon]" value="<%= @eicon.icon %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Icon name: </td>
              <td class="itemValue"><input type="text" name="eicon[icon_name]" value="<%= @eicon.icon_name %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
