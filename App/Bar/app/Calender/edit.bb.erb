<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @calender.object %>
    <h1>Edit <%= @calender.title%></h1>
    <%= link_to "Delete", :action => :delete, :id => @calender.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @calender.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Title: </td>
              <td class="itemValue"><input type="text" name="calender[title]" value="<%= @calender.title %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Message: </td>
              <td class="itemValue"><input type="text" name="calender[message]" value="<%= @calender.message %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Date: </td>
              <td class="itemValue"><input type="text" name="calender[date]" value="<%= @calender.date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Time: </td>
              <td class="itemValue"><input type="text" name="calender[time]" value="<%= @calender.time %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
