<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @calender.title %></h1>
<a href="<%= Rho::RhoConfig.start_path %>" class="ui-btn-left" data-icon="back" data-direction="reverse" <%= "data-ajax='false'" if is_bb6 %>>
Back
</a>
  <img class="ui-btn-right" src="<%= Rho::RhoApplication::get_blob_path($right_image) %>" />
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Title</div>
            <div class="itemValue"><%= @calender.title %></div>
          </li>
      
          <li>
            <div class="itemLabel">Message</div>
            <div class="itemValue"><%= @calender.message %></div>
          </li>
      
          <li>
            <div class="itemLabel">Date</div>
            <div class="itemValue"><%= @calender.date %></div>
          </li>
      
          <li>
            <div class="itemLabel">Time</div>
            <div class="itemValue"><%= Time.at(@calender.time.to_i).strftime("%H:%M:%S") %></div>
          </li>
    </ul>
  </div>

</div>
