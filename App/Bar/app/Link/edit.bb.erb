<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @link.object %>
    <h1>Edit <%= @link.links_url%></h1>
    <%= link_to "Delete", :action => :delete, :id => @link.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @link.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Links url: </td>
              <td class="itemValue"><input type="text" name="link[links_url]" value="<%= @link.links_url %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Region: </td>
              <td class="itemValue"><input type="text" name="link[region_id]" value="<%= @link.region_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Type: </td>
              <td class="itemValue"><input type="text" name="link[type_id]" value="<%= @link.type_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
