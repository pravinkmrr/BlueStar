<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @agenda.object %>
    <h1>Edit <%= @agenda.filename%></h1>
    <%= link_to "Delete", :action => :delete, :id => @agenda.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @agenda.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Filename: </td>
              <td class="itemValue"><input type="text" name="agenda[filename]" value="<%= @agenda.filename %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Event: </td>
              <td class="itemValue"><input type="text" name="agenda[event_id]" value="<%= @agenda.event_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="agenda[name]" value="<%= @agenda.name %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
