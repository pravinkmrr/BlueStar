<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @agenda.filename %></h1>
    <a href="<%= url_for :action => :show, :id => @agenda.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @agenda.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @agenda.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="agenda[filename]" class="fieldLabel">Filename</label>
            <input type="text" id="agenda[filename]" name="agenda[filename]" value="<%= @agenda.filename %>" <%= placeholder( "Filename" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="agenda[event_id]" class="fieldLabel">Event</label>
            <input type="text" id="agenda[event_id]" name="agenda[event_id]" value="<%= @agenda.event_id %>" <%= placeholder( "Event" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="agenda[name]" class="fieldLabel">Name</label>
            <input type="text" id="agenda[name]" name="agenda[name]" value="<%= @agenda.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
