<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @region.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @region.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="region[region_name]" class="fieldLabel">Region name</label>
            <input type="text" id="region[region_name]" name="region[region_name]" <%= placeholder("Region name") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
