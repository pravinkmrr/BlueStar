<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @region.region_name %></h1>
    <a href="<%= url_for :action => :show, :id => @region.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @region.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @region.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="region[region_name]" class="fieldLabel">Region name</label>
            <input type="text" id="region[region_name]" name="region[region_name]" value="<%= @region.region_name %>" <%= placeholder( "Region name" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
