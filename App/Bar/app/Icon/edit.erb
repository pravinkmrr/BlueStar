<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @icon.icon_name %></h1>
    <a href="<%= url_for :action => :show, :id => @icon.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @icon.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @icon.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="icon[icon_name]" class="fieldLabel">Icon name</label>
            <input type="text" id="icon[icon_name]" name="icon[icon_name]" value="<%= @icon.icon_name %>" <%= placeholder( "Icon name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="icon[icon_file]" class="fieldLabel">Icon file</label>
            <input type="text" id="icon[icon_file]" name="icon[icon_file]" value="<%= @icon.icon_file %>" <%= placeholder( "Icon file" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="icon[icon]" class="fieldLabel">Icon</label>
            <input type="text" id="icon[icon]" name="icon[icon]" value="<%= @icon.icon %>" <%= placeholder( "Icon" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
