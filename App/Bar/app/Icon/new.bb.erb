<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Icon</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @icon.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Icon name: </td>
                <td class="itemValue"><input type="text" name="icon[icon_name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Icon file: </td>
                <td class="itemValue"><input type="text" name="icon[icon_file]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Icon: </td>
                <td class="itemValue"><input type="text" name="icon[icon]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
