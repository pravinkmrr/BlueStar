<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @icon.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @icon.object %>"/>      
          <div data-role="fieldcontain">
            <label for="icon[icon_name]" class="fieldLabel">Icon name</label>
            <input type="text" id="icon[icon_name]" name="icon[icon_name]" <%= placeholder("Icon name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="icon[icon_file]" class="fieldLabel">Icon file</label>
            <input type="text" id="icon[icon_file]" name="icon[icon_file]" <%= placeholder("Icon file") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="icon[icon]" class="fieldLabel">Icon</label>
            <input type="text" id="icon[icon]" name="icon[icon]" <%= placeholder("Icon") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
