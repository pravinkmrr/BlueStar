<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @icon.object %>
    <h1>Edit <%= @icon.icon_name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @icon.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @icon.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Icon name: </td>
              <td class="itemValue"><input type="text" name="icon[icon_name]" value="<%= @icon.icon_name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Icon file: </td>
              <td class="itemValue"><input type="text" name="icon[icon_file]" value="<%= @icon.icon_file %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Icon: </td>
              <td class="itemValue"><input type="text" name="icon[icon]" value="<%= @icon.icon %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
