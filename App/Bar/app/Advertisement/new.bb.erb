<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Advertisement</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @advertisement.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Image: </td>
                <td class="itemValue"><input type="text" name="advertisement[image]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Filename: </td>
                <td class="itemValue"><input type="text" name="advertisement[filename]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Event: </td>
                <td class="itemValue"><input type="text" name="advertisement[event_id]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
