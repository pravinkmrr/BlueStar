<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @advertisement.object %>
    <h1>Edit <%= @advertisement.image%></h1>
    <%= link_to "Delete", :action => :delete, :id => @advertisement.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @advertisement.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Image: </td>
              <td class="itemValue"><input type="text" name="advertisement[image]" value="<%= @advertisement.image %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Filename: </td>
              <td class="itemValue"><input type="text" name="advertisement[filename]" value="<%= @advertisement.filename %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Event: </td>
              <td class="itemValue"><input type="text" name="advertisement[event_id]" value="<%= @advertisement.event_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
