<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @venue.name %></h1>
    <a href="<%= url_for :action => :show, :id => @venue.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @venue.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @venue.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="venue[name]" class="fieldLabel">Name</label>
            <input type="text" id="venue[name]" name="venue[name]" value="<%= @venue.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="venue[filename]" class="fieldLabel">Filename</label>
            <input type="text" id="venue[filename]" name="venue[filename]" value="<%= @venue.filename %>" <%= placeholder( "Filename" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
