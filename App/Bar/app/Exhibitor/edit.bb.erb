<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @exhibitor.object %>
    <h1>Edit <%= @exhibitor.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @exhibitor.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @exhibitor.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="exhibitor[name]" value="<%= @exhibitor.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Filename: </td>
              <td class="itemValue"><input type="text" name="exhibitor[filename]" value="<%= @exhibitor.filename %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
