<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @welcome.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @welcome.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="welcome[name]" class="fieldLabel">Name</label>
            <input type="text" id="welcome[name]" name="welcome[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="welcome[filename]" class="fieldLabel">Filename</label>
            <input type="text" id="welcome[filename]" name="welcome[filename]" <%= placeholder("Filename") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
