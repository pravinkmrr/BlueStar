<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @presentation.name %></h1>
    <a href="<%= url_for :action => :show, :id => @presentation.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @presentation.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @presentation.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="presentation[name]" class="fieldLabel">Name</label>
            <input type="text" id="presentation[name]" name="presentation[name]" value="<%= @presentation.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="presentation[filename]" class="fieldLabel">Filename</label>
            <input type="text" id="presentation[filename]" name="presentation[filename]" value="<%= @presentation.filename %>" <%= placeholder( "Filename" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="presentation[event_id]" class="fieldLabel">Event</label>
            <input type="text" id="presentation[event_id]" name="presentation[event_id]" value="<%= @presentation.event_id %>" <%= placeholder( "Event" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="presentation[workshop_id]" class="fieldLabel">Workshop</label>
            <input type="text" id="presentation[workshop_id]" name="presentation[workshop_id]" value="<%= @presentation.workshop_id %>" <%= placeholder( "Workshop" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
