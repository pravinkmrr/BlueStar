<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @presentation.object %>
    <h1>Edit <%= @presentation.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @presentation.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @presentation.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="presentation[name]" value="<%= @presentation.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Filename: </td>
              <td class="itemValue"><input type="text" name="presentation[filename]" value="<%= @presentation.filename %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Event: </td>
              <td class="itemValue"><input type="text" name="presentation[event_id]" value="<%= @presentation.event_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Workshop: </td>
              <td class="itemValue"><input type="text" name="presentation[workshop_id]" value="<%= @presentation.workshop_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
