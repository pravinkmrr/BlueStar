<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @guide.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @guide.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="guide[name]" class="fieldLabel">Name</label>
            <input type="text" id="guide[name]" name="guide[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="guide[filename]" class="fieldLabel">Filename</label>
            <input type="text" id="guide[filename]" name="guide[filename]" <%= placeholder("Filename") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
