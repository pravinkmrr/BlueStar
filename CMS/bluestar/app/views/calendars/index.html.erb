<h1>Listing calendars</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Message</th>
    <th>Date</th>
    <th>Time</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calendars.each do |calendar| %>
  <tr>
    <td><%= calendar.title %></td>
    <td><%= calendar.message %></td>
    <td><%= calendar.date %></td>
    <td><%= calendar.time %></td>
    <td><%= Event.find(calendar.event_id).name %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
    <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

