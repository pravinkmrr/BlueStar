<h1>Listing qrcodes</h1>

<table>
  <tr>
    <th>Link</th>
    <th>App name</th>
    <th>Device</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @qrcodes.each do |qrcode| %>
  <tr>
    <td><%= qrcode.link %></td>
    <td><%= qrcode.app_name %></td>
    <td><% if qrcode.device.to_s=="1" %>
	BB
	<% else %>
	Windows
	<% end %>
	</td>
    <td><%= link_to 'Show', qrcode %></td>
    <td><%= link_to 'Edit', edit_qrcode_path(qrcode) %></td>
    <td><%= link_to 'Destroy', qrcode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Qrcode', new_qrcode_path %>
