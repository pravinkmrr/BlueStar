<h1>Listing links</h1>

<table>
  <tr>
    <th>Links url</th>
    <th>Region</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.links_url %></td>
    <td><%= Region.find(link.region_id).region_name %></td>
    <td><%= Type.find(link.type_id).type_name %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

